{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "strict": false,
    "stripInternal": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": ["src", "test"]
}
